# --- Functions ---

#
# SSH Agent
#
# Start ssh agent and source environment
function start_ssh_agent {
     echo "Initialising new SSH agent..."
     /usr/bin/ssh-agent -t ${SSH_KEY_LIFETIME} | sed 's/^echo/#echo/' > "${SSH_ENV}"
     chmod 600 "${SSH_ENV}"
     source "${SSH_ENV}" > /dev/null
}

# Source SSH settings, if applicable
function load_ssh_agent {
    if [ -z "$XDG_CURRENT_DESKTOP" ]; then
        if [ -f "${SSH_ENV}" ]; then
            source "${SSH_ENV}" > /dev/null
            #ps ${SSH_AGENT_PID} doesn't work under cywgin
            ps -ef | grep ${SSH_AGENT_PID} | grep "ssh-agent -t ${SSH_KEY_LIFETIME}$" > /dev/null || {
                start_ssh_agent;
            }
        else
            start_ssh_agent;
        fi
    fi
}

#
# Git in WSL using the Windows file system
#
# Note that this is an temporary work around, to fix the file system
# performance of git commands
function git {
    if isWinDir; then
        git.exe "$@"
    else
        /usr/bin/git "$@"
    fi
}

#
# Helper functions
#
# Check if this terminal instance is runnig wsl
isRunningWsl() {
    if grep -q "microsoft" /proc/sys/kernel/osrelease; then
        return $(true)
    fi

    return $(false)
}

# Check if the directory is a windows mounted drive
isWinDir() {
    if isRunningWsl && [[ $PWD =~ "^/mnt/(c|d)" ]]; then
        return $(true)
    fi

    return $(false)
}

# Include optional files
include() {
    [[ -f "$1" ]] && source "$1"
}

# Include the local functions
include ~/.functions.local
